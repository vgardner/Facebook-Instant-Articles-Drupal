  if ($form_id == 'field_ui_display_overview_form' && $form['#view_mode'] == 'facebook_instant_article') {
    form_load_include($form_state, 'inc', 'facebook_instant_articles', 'includes/view_mode_layout');

    facebook_instant_articles_layout_form($form, $form_state);
  }
}

function facebook_instant_articles_get_node_layout_settings($bundle_name) {
  ctools_include('export');
  $export_id =  'node|' . $bundle_name . '|facebook_instant_article';
  $ds_layout_settings = ctools_export_crud_load_all('facebook_instant_articles_layout_settings');

  $layout = new stdClass();
  if (isset($ds_layout_settings[$export_id])) {
    $layout = $ds_layout_settings[$export_id];
  }
  return $layout;
}
